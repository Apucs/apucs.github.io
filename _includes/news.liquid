<div class="news">
  {% if site.news != blank %}
    {% assign news_size = site.news | size %}
    <div
      class="table-responsive"
      {% if include.limit and site.announcements.scrollable and news_size > 3 %}
        style="max-height: 60vw"
      {% endif %}
    >
      {% assign news = site.news | reverse %}
      {% if include.limit and site.announcements.limit %}
        {% assign news_limit = site.announcements.limit %}
      {% else %}
        {% assign news_limit = news_size %}
      {% endif %}
      <ul class="news-timeline" style="list-style: none; padding-left: 0; margin: 0; border-left: 2px solid var(--global-divider-color); margin-left: 1rem;">
        {% for item in news limit: news_limit %}
          <li style="position: relative; padding-left: 1.5rem; padding-bottom: 1rem;">
            <span style="position: absolute; left: -5px; top: 6px; width: 8px; height: 8px; background: var(--global-theme-color); border-radius: 50%;"></span>
            <span style="font-family: monospace; opacity: 0.7;">[{{ item.date | date: '%b %Y' }}]</span>
            {% if item.inline %}
              {{ item.content | remove: '<p>' | remove: '</p>' | emojify }}
            {% else %}
              <a class="news-title" href="{{ item.url | relative_url }}">{{ item.title }}</a>
            {% endif %}
          </li>
        {% endfor %}
      </ul>
    </div>
  {% else %}
    <p>No news so far...</p>
  {% endif %}
</div>
